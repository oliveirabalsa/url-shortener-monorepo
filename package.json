{
  "private": true,
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build:web": "cd apps/web && npm run build",
    "copy:web": "rm -rf client && cp -r apps/web/dist client",
    "build:api": "cd apps/api && nest build",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "node apps/api/dist/main"
  },
  "devDependencies": {
    "prisma": "^6.3.1",
    "turbo": "^2.4.1"
  },
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "zod": "^3.24.2"
  }
}
