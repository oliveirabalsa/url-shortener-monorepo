{
  "version": 2,
  "projects": [
    {
      "name": "api",
      "src": "apps/api",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/api/$1"
        }
      ]
    },
    {
      "name": "web",
      "src": "apps/web",
      "buildCommand": "npm run build",
      "outputDirectory": "build",
      "routes": [
        {
          "src": "/(.*)",
          "dest": "/$1"
        }
      ]
    }
  ]
}
